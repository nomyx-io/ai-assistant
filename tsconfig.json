{
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "strict": false,
        "baseUrl": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types"]

    },
    "exclude": ["node_modules/**/*"],
    "include":["src/*", "src/assistant/logger.ts", "src/assistant/themes.ts", "src/assistant/ui.ts", "src/assistant/visualization_api.ts"]
}